<header>Eventagon</header>
<h2> Calendar for Events </h2>
<iframe src="https://www.google.com/calendar/embed?src=2d59pfgvh7109cp3k9g167d3f4%40group.calendar.google.com&ctz=America/New_York" style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>

<h3>Events I Created</h3>
<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Address
    </th>
    <th>
      Date
    </th>
  </tr>
<% @created_events.each do |event| %>
  <tr>
    <td>
      <%= event.name %>
    </td>
    <td>
      <%= event.street %></br>
      <%= event.zip_code %>
    </td>
    <td>
      <%= event.occurs_at.try(:strftime, "%B %d, %l:%M %p") %>
    </td>
    <td>
      <%= link_to 'edit', edit_user_event_url(current_user, :id => event.id) %>
      <%= link_to "destroy", user_event_url(current_user, :id => event.id), :method => :delete, :confirm => "Are you sure?" %>
	  <%= link_to 'event page', event %>
     
    </td>
  </tr>
<% end %>
</table>
<h3>Events I'm attending</h3>
<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Address
    </th>
    <th>
      Date
    </th>
  </tr>
<% @events.each do |event| %>
  <tr>
    <td>
      <%= event.name %>
    </td>
    <td>
      <%= event.street %></br>
      <%= event.zip_code %>
    </td>
    <td>
      <%= event.occurs_at.try(:strftime, "%B %d, %l:%M %p") %>
    </td>
  </tr>
<% end %>
</table>